<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<package name="login" namespace="/" extends="struts-default">
<interceptors>
<interceptor name="LoginInterceptor" class="project.interceptor.LoginInterceptor"/>
	<interceptor-stack name="loginStack">
		<interceptor-ref name="LoginInterceptor"/>
		<interceptor-ref name="defaultStack"/>
	</interceptor-stack>
</interceptors>
    <action name="checkConnection"
            class="project.action.TestConnectionAction"
            method="checkOracleConnection">
        <result name="success">/test-connection.jsp</result>
        <result name="input">/index.jsp</result> 
    </action>  
    <action name="report"
            class="project.action.TestConnectionAction"
            method="report">
        <result name="success">/test-connection.jsp</result>
        <result name="error">/error.jsp</result>
    </action>  
    <action name="login"
            class="project.action.LoginAction"
            method="login">
        <result name="success" type="redirect">home</result>
        <result name="input">/login.jsp</result>
        <result name="error">
        <param name="authenticate"></param>
        /error.jsp
        </result>
    </action>  
    <action name="home" class="project.action.UserAction" method="home">
    	<interceptor-ref name="loginStack"/>
    	<result name="login">/login.jsp</result>
    	<result name="success">/home.jsp</result>
    </action>
    <action name="logout" class="project.action.LoginAction" method="logout">
    <result name="success">/login.jsp</result>
    </action>
</package>
</struts>